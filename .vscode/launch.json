    "version": "0.2.0",
    "configurations": [
        {
            "name": "F#: Pomo Debug (WindowsDX)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build: Pomo.WindowsDX.fsproj",
            "program": "${workspaceFolder}/Pomo.WindowsDX/bin/Debug/net8.0-windows/Pomo.dll",
        },
        {
            "name": "F#: Pomo Debug (DesktopGL)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build: Pomo.DesktopGL.fsproj",
            "program": "${workspaceFolder}/Pomo.DesktopGL/bin/Debug/net8.0/Pomo.dll",
        },
        {
            "name": "C#: Pomo Debug (Android)",
            "type": "maui",
            "request": "launch",
            "preLaunchTask": "maui: Build",
            "cwd": "${workspaceFolder}/Pomo.Android",
        },
        {
            "name": "C#: Pomo Debug (iOS)",
            "type": "maui",
            "request": "launch",
            "preLaunchTask": "maui: Build",
            "cwd": "${workspaceFolder}/Pomo.iOS",
        },
    ]
